<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="SmartTextEditor.Windows.BackupManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="备份管理器" Height="500" Width="700"
        Background="#0D1117" 
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="文件备份管理" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="#E6EDF3" Margin="0,0,0,20"/>
        
        <!-- 文件信息 -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="FileNameText" Text="未选择文件" 
                       Grid.Column="0" Foreground="#E6EDF3" 
                       VerticalAlignment="Center" FontSize="14" Margin="0,0,20,0"/>
            
            <TextBlock x:Name="BackupStatsText" Text="备份数量: 0 | 总大小: 0KB" 
                       Grid.Column="1" Foreground="#7D8590" 
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
            
            <Button x:Name="RefreshButton" Content="刷新" 
                    Grid.Column="2" 
                    Background="#238636" Foreground="White" BorderThickness="0"
                    Padding="15,6" Click="RefreshButton_Click"/>
        </Grid>
        
        <!-- 备份列表 -->
        <DataGrid x:Name="BackupDataGrid" Grid.Row="2"
                  Background="#161B22" Foreground="#E6EDF3"
                  BorderBrush="#30363D" BorderThickness="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  RowBackground="#161B22"
                  AlternatingRowBackground="#21262D"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#30363D">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="版本" Binding="{Binding Version}" Width="120"/>
                <DataGridTextColumn Header="创建时间" Binding="{Binding CreateTime, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"/>
                <DataGridTextColumn Header="文件大小" Binding="{Binding FileSize, StringFormat=N0}" Width="100"/>
                <DataGridTextColumn Header="类型" Binding="{Binding BackupType}" Width="80"/>
                <DataGridTextColumn Header="文件路径" Binding="{Binding OriginalFilePath}" Width="*"/>
            </DataGrid.Columns>
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#161B22"/>
                    <Setter Property="Foreground" Value="#E6EDF3"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#58A6FF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#21262D"/>
                    <Setter Property="Foreground" Value="#E6EDF3"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,8"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        
        <!-- 操作按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="RestoreButton" Content="恢复备份" 
                    Background="#58A6FF" Foreground="White" BorderThickness="0"
                    Padding="20,8" Margin="0,0,10,0" Click="RestoreButton_Click"/>
            <Button x:Name="DeleteButton" Content="删除备份" 
                    Background="#DA3633" Foreground="White" BorderThickness="0"
                    Padding="20,8" Margin="0,0,10,0" Click="DeleteButton_Click"/>
            <Button x:Name="CloseButton" Content="关闭" 
                    Background="#21262D" Foreground="#E6EDF3" BorderBrush="#30363D"
                    Padding="20,8" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>