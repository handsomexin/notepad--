<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="SmartTextEditor.Windows.FindReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="查找和替换" Height="280" Width="500"
        Background="#0D1117" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 查找输入 -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="查找:" Grid.Column="0" 
                       Foreground="#E6EDF3" VerticalAlignment="Center" FontSize="14"/>
            <TextBox x:Name="FindTextBox" Grid.Column="1"
                     Background="#21262D" Foreground="#E6EDF3" 
                     BorderBrush="#30363D" BorderThickness="1"
                     Padding="8" FontSize="13" FontFamily="Consolas"/>
        </Grid>
        
        <!-- 替换输入 -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="替换为:" Grid.Column="0" 
                       Foreground="#E6EDF3" VerticalAlignment="Center" FontSize="14"/>
            <TextBox x:Name="ReplaceTextBox" Grid.Column="1"
                     Background="#21262D" Foreground="#E6EDF3" 
                     BorderBrush="#30363D" BorderThickness="1"
                     Padding="8" FontSize="13" FontFamily="Consolas"/>
        </Grid>
        
        <!-- 选项 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="80,0,0,15">
            <CheckBox x:Name="MatchCaseCheckBox" Content="区分大小写" 
                      Foreground="#E6EDF3" Margin="0,0,20,0"/>
            <CheckBox x:Name="MatchWholeWordCheckBox" Content="全字匹配" 
                      Foreground="#E6EDF3" Margin="0,0,20,0"/>
            <CheckBox x:Name="UseRegexCheckBox" Content="正则表达式" 
                      Foreground="#E6EDF3"/>
        </StackPanel>
        
        <!-- 按钮区域 -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="FindNextButton" Content="查找下一个" 
                        Background="#238636" Foreground="White" BorderThickness="0"
                        Padding="12,6" Margin="0,0,10,0" Click="FindNext_Click"/>
                <Button x:Name="FindPrevButton" Content="查找上一个" 
                        Background="#238636" Foreground="White" BorderThickness="0"
                        Padding="12,6" Click="FindPrev_Click"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ReplaceButton" Content="替换" 
                        Background="#58A6FF" Foreground="White" BorderThickness="0"
                        Padding="12,6" Margin="0,0,10,0" Click="Replace_Click"/>
                <Button x:Name="ReplaceAllButton" Content="全部替换" 
                        Background="#DA3633" Foreground="White" BorderThickness="0"
                        Padding="12,6" Click="ReplaceAll_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- 结果信息 -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <TextBlock x:Name="ResultText" Text="" 
                       Foreground="#7D8590" FontSize="12" HorizontalAlignment="Left"/>
            <TextBlock x:Name="StatusText" Text="准备搜索" 
                       Foreground="#58A6FF" FontSize="12" HorizontalAlignment="Right"/>
        </Grid>
        
        <!-- 关闭按钮 -->
        <Button Grid.Row="5" Content="关闭" 
                Background="#21262D" Foreground="#E6EDF3" BorderBrush="#30363D"
                Padding="20,8" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Click="Close_Click"/>
    </Grid>
</Window>