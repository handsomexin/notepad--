<Window x:Class="SmartTextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Text Editor - 智能文本编辑器" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        Background="#0D1117"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 菜单栏 -->
        <Menu x:Name="MainMenu" Grid.Row="0" Background="#161B22" Foreground="#E6EDF3">
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Background" Value="#161B22"/>
                    <Setter Property="Foreground" Value="#E6EDF3"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="MenuItem">
                                <Border x:Name="templateRoot"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                    <Grid VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="MenuItemIGTColumnGroup"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter x:Name="Icon" ContentSource="Icon" 
                                                        Margin="3" Width="16" Height="16" 
                                                        VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        <Border x:Name="GlyphPanel" Background="#3C434C" BorderBrush="#3C434C" 
                                                BorderThickness="1" ClipToBounds="False" HorizontalAlignment="Center" 
                                                Height="22" Margin="-1,0,0,0" VerticalAlignment="Center" 
                                                Visibility="Hidden" Width="22">
                                            <Path x:Name="Glyph" Data="M0,5.1 L1.7,5.2 L3.4,7.1 L8,0.4 L9.2,0 L3.3,10.8 Z" 
                                                  FlowDirection="LeftToRight" Fill="#E6EDF3" Height="11" Width="10"/>
                                        </Border>
                                        <ContentPresenter x:Name="menuHeaderContainer" 
                                                        Grid.Column="2" 
                                                        ContentSource="Header" 
                                                        HorizontalAlignment="Left" 
                                                        Margin="{TemplateBinding Padding}" 
                                                        RecognizesAccessKey="True" 
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                                        VerticalAlignment="Center"/>
                                        <TextBlock x:Name="menuGestureText" 
                                                 Grid.Column="4" 
                                                 Foreground="#7D8590" 
                                                 HorizontalAlignment="Right" 
                                                 Margin="{TemplateBinding Padding}" 
                                                 Opacity="0.7" 
                                                 Text="{TemplateBinding InputGestureText}" 
                                                 VerticalAlignment="Center"/>
                                        <Path x:Name="RightArrow" 
                                              Grid.Column="5" 
                                              Data="M0,0 L0,7 L4,3.5 Z" 
                                              Fill="#7D8590" 
                                              HorizontalAlignment="Left" 
                                              Margin="10,0,0,0" 
                                              VerticalAlignment="Center"/>
                                        <Popup x:Name="PART_Popup" 
                                               AllowsTransparency="True" 
                                               Focusable="False" 
                                               IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}" 
                                               Placement="Bottom" 
                                               PopupAnimation="{DynamicResource {x:Static SystemParameters.MenuPopupAnimationKey}}">
                                            <Border x:Name="SubMenuBorder" 
                                                    Background="#21262D" 
                                                    BorderBrush="#30363D" 
                                                    BorderThickness="1" 
                                                    Padding="2">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                                                </Border.Effect>
                                                <ScrollViewer x:Name="SubMenuScrollViewer" Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}">
                                                    <Grid RenderOptions.ClearTypeHint="Enabled">
                                                        <Canvas HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0">
                                                            <Rectangle x:Name="OpaqueRect" 
                                                                     Fill="{Binding Background, ElementName=SubMenuBorder}" 
                                                                     Height="{Binding ActualHeight, ElementName=SubMenuBorder}" 
                                                                     Width="{Binding ActualWidth, ElementName=SubMenuBorder}"/>
                                                        </Canvas>
                                                        <ItemsPresenter x:Name="ItemsPresenter" 
                                                                      KeyboardNavigation.DirectionalNavigation="Cycle" 
                                                                      Grid.IsSharedSizeScope="True" 
                                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                                                      KeyboardNavigation.TabNavigation="Cycle"/>
                                                    </Grid>
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSuspendingPopupAnimation" Value="True">
                                        <Setter Property="PopupAnimation" TargetName="PART_Popup" Value="None"/>
                                    </Trigger>
                                    <Trigger Property="Icon" Value="{x:Null}">
                                        <Setter Property="Visibility" TargetName="Icon" Value="Collapsed"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Visibility" TargetName="GlyphPanel" Value="Visible"/>
                                        <Setter Property="Visibility" TargetName="Icon" Value="Collapsed"/>
                                    </Trigger>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter Property="Background" TargetName="templateRoot" Value="#30363D"/>
                                        <Setter Property="BorderBrush" TargetName="templateRoot" Value="#58A6FF"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="TextElement.Foreground" TargetName="menuHeaderContainer" Value="#6E7681"/>
                                        <Setter Property="Fill" TargetName="Glyph" Value="#6E7681"/>
                                        <Setter Property="Fill" TargetName="RightArrow" Value="#6E7681"/>
                                    </Trigger>
                                    <Trigger Property="ScrollViewer.CanContentScroll" SourceName="SubMenuScrollViewer" Value="False">
                                        <Setter Property="Canvas.Top" TargetName="OpaqueRect" Value="{Binding VerticalOffset, ElementName=SubMenuScrollViewer}"/>
                                        <Setter Property="Canvas.Left" TargetName="OpaqueRect" Value="{Binding HorizontalOffset, ElementName=SubMenuScrollViewer}"/>
                                    </Trigger>
                                    <Trigger Property="HasDropShadow" SourceName="PART_Popup" Value="True">
                                        <Setter Property="Margin" TargetName="SubMenuBorder" Value="0,3,0,3"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Menu.Resources>
            
            <MenuItem Header="文件(_F)">
                <MenuItem Header="新建(_N)" InputGestureText="Ctrl+N" Click="NewFile_Click"/>
                <MenuItem Header="打开(_O)" InputGestureText="Ctrl+O" Click="OpenFile_Click"/>
                <Separator/>
                <MenuItem Header="保存(_S)" InputGestureText="Ctrl+S" Click="SaveFile_Click"/>
                <MenuItem Header="另存为(_A)" InputGestureText="Ctrl+Shift+S" Click="SaveAsFile_Click"/>
                <MenuItem Header="保存所有(_L)" InputGestureText="Ctrl+Alt+S" Click="SaveAllFiles_Click"/>
                <Separator/>
                <MenuItem Header="关闭标签页(_C)" InputGestureText="Ctrl+W" Click="CloseCurrentTab_Click"/>
                <MenuItem Header="关闭所有标签页(_A)" InputGestureText="Ctrl+Shift+W" Click="CloseAllTabs_Click"/>
                <Separator/>
                <MenuItem Header="退出(_X)" InputGestureText="Alt+F4" Click="Exit_Click"/>
            </MenuItem>
            
            <MenuItem Header="工具(_T)">
                <MenuItem Header="文件对比(_C)" InputGestureText="Ctrl+D" Click="FileCompare_Click"/>
                <MenuItem Header="对比当前文件(_F)" Click="CompareCurrentFiles_Click"/>
                <Separator/>
                <MenuItem Header="查找替换(_F)" InputGestureText="Ctrl+H" Click="FindReplace_Click"/>
                <MenuItem Header="查找(_S)" InputGestureText="Ctrl+F" Click="Find_Click"/>
                <Separator/>
                <MenuItem Header="检测编码(_D)" Click="DetectEncoding_Click"/>
                <MenuItem Header="转换编码(_E)" Click="ConvertEncoding_Click"/>
                <Separator/>
                <MenuItem Header="转换为 UTF-8" Click="ConvertToUtf8_Click"/>
                <MenuItem Header="转换为 GBK" Click="ConvertToGbk_Click"/>
                <MenuItem Header="转换为 UTF-16" Click="ConvertToUtf16_Click"/>
                <Separator/>
                <MenuItem Header="备份管理(_B)" Click="BackupManager_Click"/>
                <Separator/>
                <MenuItem Header="主题设置(_T)">
                    <MenuItem Header="深色主题" Click="SetDarkTheme_Click" IsCheckable="True" IsChecked="True" Name="DarkThemeMenuItem"/>
                    <MenuItem Header="浅色主题" Click="SetLightTheme_Click" IsCheckable="True" Name="LightThemeMenuItem"/>
                    <MenuItem Header="高对比度主题" Click="SetHighContrastTheme_Click" IsCheckable="True" Name="HighContrastThemeMenuItem"/>
                    <MenuItem Header="护眼主题" Click="SetEyeCareTheme_Click" IsCheckable="True" Name="EyeCareThemeMenuItem"/>
                    <MenuItem Header="Monokai 主题" Click="SetMonokaiTheme_Click" IsCheckable="True" Name="MonokaiThemeMenuItem"/>
                    <MenuItem Header="Solarized 主题" Click="SetSolarizedTheme_Click" IsCheckable="True" Name="SolarizedThemeMenuItem"/>
                </MenuItem>
            </MenuItem>
            
            <MenuItem Header="标签页(_T)">
                <MenuItem Header="下一个标签页(_N)" InputGestureText="Ctrl+Tab" Click="NextTab_Click"/>
                <MenuItem Header="上一个标签页(_P)" InputGestureText="Ctrl+Shift+Tab" Click="PreviousTab_Click"/>
                <Separator/>
                <MenuItem Header="关闭当前标签页(_C)" InputGestureText="Ctrl+W" Click="CloseCurrentTab_Click"/>
                <MenuItem Header="关闭其他标签页(_O)" Click="CloseOtherTabs_Click"/>
                <MenuItem Header="关闭所有标签页(_A)" InputGestureText="Ctrl+Shift+W" Click="CloseAllTabs_Click"/>
                <Separator/>
                <MenuItem x:Name="TabListMenuItem" Header="标签页列表(_L)">
                    <!-- 动态标签页列表将在这里显示 -->
                </MenuItem>
            </MenuItem>
            
            <MenuItem Header="帮助(_H)">
                <MenuItem Header="关于(_A)" Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- 工具栏 -->
        <ToolBar x:Name="MainToolBar" Grid.Row="1" Background="#161B22" Height="50">
            <Button Content="📄 新建" Padding="12,8" Margin="4,2" 
                    Background="#238636" Foreground="White" BorderThickness="0"
                    Click="NewFile_Click" ToolTip="新建文档 (Ctrl+N)"/>
            <Button Content="📁 打开" Padding="12,8" Margin="4,2"
                    Background="#238636" Foreground="White" BorderThickness="0"
                    Click="OpenFile_Click" ToolTip="打开文件 (Ctrl+O)"/>
            <Button Content="💾 保存" Padding="12,8" Margin="4,2"
                    Background="#238636" Foreground="White" BorderThickness="0"
                    Click="SaveFile_Click" ToolTip="保存文件 (Ctrl+S)"/>
            <Button Content="💾 全部保存" Padding="12,8" Margin="4,2"
                    Background="#58A6FF" Foreground="White" BorderThickness="0"
                    Click="SaveAllFiles_Click" ToolTip="保存所有文件 (Ctrl+Alt+S)"/>
            
            <Separator Margin="12,4"/>
            
            <Button Content="🔍 检测编码" Padding="12,8" Margin="4,2"
                    Background="#21262D" Foreground="#E6EDF3" BorderBrush="#30363D" BorderThickness="1"
                    Click="DetectEncoding_Click" ToolTip="检测文件编码"/>
            <Button Content="🔄 转换编码" Padding="12,8" Margin="4,2"
                    Background="#21262D" Foreground="#E6EDF3" BorderBrush="#30363D" BorderThickness="1"
                    Click="ConvertEncoding_Click" ToolTip="转换文件编码"/>
            
            <Separator Margin="12,4"/>
            
            <Button Content="🎭 文件对比" Padding="12,8" Margin="4,2"
                    Background="#DA3633" Foreground="White" BorderThickness="0"
                    Click="FileCompare_Click" ToolTip="打开文件对比窗口 (Ctrl+D)"/>
                    
            <Separator Margin="12,4"/>
            
            <ComboBox x:Name="ThemeSelector" Width="140" Height="30" Margin="4,2"
                      Background="#21262D" Foreground="#E6EDF3" BorderBrush="#30363D"
                      SelectionChanged="ThemeSelector_SelectionChanged"
                      ToolTip="选择主题">
                <ComboBoxItem Content="深色主题" Tag="Dark"/>
                <ComboBoxItem Content="浅色主题" Tag="Light"/>
                <ComboBoxItem Content="高对比度" Tag="HighContrast"/>
                <ComboBoxItem Content="护眼主题" Tag="EyeCare"/>
                <ComboBoxItem Content="Monokai" Tag="Monokai"/>
                <ComboBoxItem Content="Solarized" Tag="Solarized"/>
            </ComboBox>
        </ToolBar>
        
        <!-- 主编辑区域 -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 标签页控件 -->
            <TabControl x:Name="FileTabControl" Grid.Row="0" Grid.RowSpan="2"
                        Background="#0D1117" BorderThickness="0"
                        SelectionChanged="FileTabControl_SelectionChanged"
                        MouseRightButtonUp="FileTabControl_RightClick"
                        MouseDoubleClick="FileTabControl_DoubleClick">
                <TabControl.ContextMenu>
                    <ContextMenu x:Name="TabContextMenu" Background="#21262D" BorderBrush="#30363D">
                        <MenuItem Header="关闭标签页" Click="CloseCurrentTab_Click" 
                                  Background="#21262D" Foreground="#E6EDF3"/>
                        <MenuItem Header="关闭其他标签页" Click="CloseOtherTabs_Click" 
                                  Background="#21262D" Foreground="#E6EDF3"/>
                        <MenuItem Header="关闭所有标签页" Click="CloseAllTabs_Click" 
                                  Background="#21262D" Foreground="#E6EDF3"/>
                        <Separator Background="#30363D"/>
                        <MenuItem Header="新建文件" Click="NewFile_Click" 
                                  Background="#21262D" Foreground="#E6EDF3"/>
                        <MenuItem Header="打开文件" Click="OpenFile_Click" 
                                  Background="#21262D" Foreground="#E6EDF3"/>
                    </ContextMenu>
                </TabControl.ContextMenu>
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="#21262D"/>
                        <Setter Property="Foreground" Value="#E6EDF3"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Margin" Value="2,0"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" 
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="#30363D" 
                                            BorderThickness="1"
                                            CornerRadius="8,8,0,0" 
                                            Margin="{TemplateBinding Margin}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:Name="HeaderText" 
                                                      Text="{TemplateBinding Header}" 
                                                      Foreground="{TemplateBinding Foreground}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Margin="8,0,4,0"/>
                                            <Button x:Name="CloseButton" Grid.Column="1"
                                                    Width="16" Height="16" Margin="4,0,4,0"
                                                    Background="Transparent" BorderBrush="Transparent"
                                                    Foreground="{TemplateBinding Foreground}"
                                                    FontFamily="Segoe UI Symbol" Content="✕"
                                                    Click="CloseTabButton_Click"
                                                    Visibility="Visible"
                                                    Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#0D1117"/>
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#58A6FF"/>
                                            <Setter TargetName="HeaderText" Property="Foreground" Value="#58A6FF"/>
                                            <Setter TargetName="CloseButton" Property="Foreground" Value="#58A6FF"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#30363D"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsModified}" Value="True">
                                            <Setter TargetName="HeaderText" Property="Text" Value="{Binding DisplayName}"/>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                
                <!-- 默认欢迎标签页 -->
                <TabItem Header="欢迎" x:Name="WelcomeTab">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="35"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 行号区域 -->
                        <TextBox x:Name="WelcomeLineNumbers" Grid.Column="0"
                                 Background="#161B22" Foreground="#7D8590"
                                 BorderThickness="0,0,1,0" BorderBrush="#30363D"
                                 FontFamily="Consolas" FontSize="13"
                                 IsReadOnly="True" IsTabStop="False"
                                 VerticalScrollBarVisibility="Hidden"
                                 HorizontalScrollBarVisibility="Hidden"
                                 TextAlignment="Right" Padding="8,12,8,12"
                                 Width="35"/>
                        
                        <!-- 文本编辑器 -->
                        <TextBox x:Name="WelcomeTextEditor" Grid.Column="1"
                                 Background="#0D1117" Foreground="#E6EDF3"
                                 BorderBrush="#30363D" BorderThickness="1"
                                 FontFamily="Consolas" FontSize="14" Padding="12"
                                 AcceptsReturn="True" AcceptsTab="True"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 TextWrapping="NoWrap"
                                 ScrollViewer.ScrollChanged="WelcomeTextEditor_ScrollChanged"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="3" Background="#161B22" Foreground="#E6EDF3" Height="36">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" 
                             Fill="#3FB950" Margin="0,0,10,0"/>
                    <TextBlock x:Name="StatusText" Text="就绪" Foreground="#E6EDF3" 
                               FontWeight="Medium" VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
            
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="SelectionInfoText" Text="" 
                               Foreground="#7D8590" Margin="0,0,16,0" 
                               FontWeight="Medium" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CursorPositionText" Text="行 1, 列 1" 
                               Foreground="#E6EDF3" Margin="0,0,16,0" 
                               FontWeight="Medium" VerticalAlignment="Center"/>
                    <Border Background="#58A6FF" CornerRadius="12" Padding="12,4">
                        <TextBlock x:Name="EncodingText" Text="UTF-8" 
                                   Foreground="White" FontWeight="Bold" FontSize="11"/>
                    </Border>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
    
    <!-- 快捷键绑定 -->
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="ApplicationCommands.New"/>
        <KeyBinding Key="O" Modifiers="Control" Command="ApplicationCommands.Open"/>
        <KeyBinding Key="S" Modifiers="Control" Command="ApplicationCommands.Save"/>
        <KeyBinding Key="S" Modifiers="Control+Alt" Command="ApplicationCommands.Save"/>
        <KeyBinding Key="S" Modifiers="Control+Shift" Command="ApplicationCommands.Save"/>
        <KeyBinding Key="W" Modifiers="Control" Command="ApplicationCommands.Close"/>
        <KeyBinding Key="D" Modifiers="Control" Command="ApplicationCommands.Properties"/>
        <KeyBinding Key="H" Modifiers="Control" Command="ApplicationCommands.Replace"/>
        <KeyBinding Key="F" Modifiers="Control" Command="ApplicationCommands.Find"/>
        <KeyBinding Key="Tab" Modifiers="Control" Command="NavigationCommands.NextPage"/>
        <KeyBinding Key="Tab" Modifiers="Control+Shift" Command="NavigationCommands.PreviousPage"/>
    </Window.InputBindings>
</Window>